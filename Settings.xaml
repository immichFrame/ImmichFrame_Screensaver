<Window x:Class="ImmichFrame_Screensaver.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImmichFrame_Screensaver"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter WebView URL:" Margin="0,0,0,10"/>
            <TextBox x:Name="UrlTextBox" Margin="0,0,0,20"/>
            <Button Content="Save" Click="SaveButton_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
